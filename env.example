# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/blocmerce

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random-256-bits
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-also-long-and-random-256-bits
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ISSUER=Blocmerce
JWT_AUDIENCE=Blocmerce-Users

# Password Security
BCRYPT_ROUNDS=12

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@blocmerce.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Two-Factor Authentication
TWO_FA_ISSUER=Blocmerce

# Blockchain Configuration
RPC_URL=https://mainnet.infura.io/v3/your_project_id
BLOCKCHAIN_NETWORK=ethereum
SIGNATURE_SECRET=your_signature_secret_for_blockchain_operations

# Smart Contract Addresses
PRODUCT_CONTRACT_ADDRESS=your_product_registry_contract_address
REVIEW_CONTRACT_ADDRESS=your_review_system_contract_address
ESCROW_CONTRACT_ADDRESS=your_escrow_contract_address
USDT_CONTRACT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# IPFS Configuration
IPFS_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_infura_ipfs_project_id
IPFS_PROJECT_SECRET=your_infura_ipfs_project_secret

# Wallet Configuration
METAMASK_ENABLED=true
TRUST_WALLET_ENABLED=true
WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# Notification Configuration
NOTIFICATION_POLLING_INTERVAL=30000
NOTIFICATION_CLEANUP_DAYS=30
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=false

# Shipping Carrier APIs (for order tracking)
FEDEX_API_URL=https://apis.fedex.com
FEDEX_API_KEY=your_fedex_api_key
FEDEX_API_SECRET=your_fedex_api_secret
FEDEX_ACCOUNT_NUMBER=your_fedex_account_number

UPS_API_URL=https://onlinetools.ups.com
UPS_API_KEY=your_ups_api_key
UPS_USER_ID=your_ups_user_id
UPS_PASSWORD=your_ups_password

DHL_API_URL=https://api.dhl.com
DHL_API_KEY=your_dhl_api_key

USPS_API_URL=https://secure.shippingapis.com
USPS_USER_ID=your_usps_user_id

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=3600000
PASSWORD_RESET_EXPIRY=3600000
EMAIL_VERIFICATION_EXPIRY=86400000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Audit and Security
AUDIT_LOGGING_ENABLED=true
SECURITY_MONITORING_ENABLED=true
ADMIN_EMAIL=admin@blocmerce.com

# Development/Testing
SEED_SAMPLE_DATA=false
ENABLE_CORS=true
LOG_LEVEL=info 