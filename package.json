{
  "name": "blocmerce-phase1",
  "version": "1.0.0",
  "description": "Blocmerce Phase 1: Traditional Ecommerce + Blockchain Data Storage",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:windows": "set PORT=5000 && node server.js",
    "start:linux": "PORT=5000 node server.js",
    "start:with-port": "cross-env PORT=5000 node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:windows": "set NODE_ENV=development && nodemon server.js",
    "dev:linux": "NODE_ENV=development nodemon server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:load": "node tests/load-testing/run-load-test.js",
    "frontend": "cd frontend && npm start",
    "build": "echo 'Building application...'",
    "build:frontend": "cd frontend && npm run build",
    "install:frontend": "cd frontend && npm install",
    "clean": "node -e \"console.log('Cleaning project...'); require('fs').rmSync('./logs', {recursive: true, force: true}); require('fs').rmSync('./coverage', {recursive: true, force: true}); console.log('Clean complete!');\"",
    "clean:cache": "npm cache clean --force",
    "clean:all": "npm run clean && npm run clean:cache && npm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "audit:security": "npm audit",
    "audit:fix": "npm audit fix",
    "logs:view": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "db:seed": "node backend/scripts/seedData.js",
    "db:clear": "node backend/scripts/clearData.js",
    "health": "node -e \"require('./frontend/src/services/api').apiEndpoints.healthCheck().then(r => console.log('Health:', r)).catch(e => console.error('Health check failed:', e.message));\"",
    "docker:build": "docker build -t blocmerce .",
    "docker:run": "docker run -p 5000:5000 blocmerce"
  },
  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ethers": "^6.8.1",
    "express": "^4.19.2",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.2.1",
    "helmet": "^6.2.0",
    "ipfs-http-client": "^60.0.1",
    "jsonwebtoken": "^9.0.0",
    "mime-types": "^2.1.35",
    "mongoose": "^7.0.0",
    "multer": "^2.0.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.4",
    "react-hot-toast": "^2.5.2",
    "sharp": "^0.32.6",
    "speakeasy": "^2.0.0",
    "stripe": "^10.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "hardhat": "^2.19.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "supertest": "^7.1.1"
  },
  "keywords": [
    "blockchain",
    "ecommerce",
    "web3",
    "cryptocurrency",
    "products",
    "smart-contracts",
    "ethereum",
    "defi",
    "marketplace"
  ],
  "author": "Blocmerce Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blocmerce/blocmerce.git"
  },
  "bugs": {
    "url": "https://github.com/blocmerce/blocmerce/issues"
  },
  "homepage": "https://github.com/blocmerce/blocmerce#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  }
}
