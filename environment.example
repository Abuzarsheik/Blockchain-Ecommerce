# =======================
# BLOCMERCE ENVIRONMENT CONFIGURATION
# =======================

# APPLICATION SETTINGS
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000

# DATABASE CONFIGURATION
MONGODB_URI=mongodb://localhost:27017/blocmerce
MONGODB_TEST_URI=mongodb://localhost:27017/blocmerce_test

# SECURITY CONFIGURATION
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_characters_long
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_min_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# EMAIL SERVICE CONFIGURATION
EMAIL_SERVICE_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# BLOCKCHAIN CONFIGURATION
BLOCKCHAIN_ENABLED=true
ETHEREUM_NETWORK=goerli
ETHEREUM_RPC_URL=https://goerli.infura.io/v3/your_infura_project_id
PRIVATE_KEY=your_private_key_for_deployment
CONTRACT_ADDRESS=deployed_contract_address

# STRIPE PAYMENT CONFIGURATION
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# IPFS CONFIGURATION
IPFS_ENABLED=true
IPFS_HOST=127.0.0.1
IPFS_PORT=5001
IPFS_PROTOCOL=http

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# SECURITY HEADERS
HELMET_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# FILE UPLOAD LIMITS
FILE_UPLOAD_LIMIT=10mb
MAX_FILES_PER_UPLOAD=5

# MONITORING & LOGGING
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=info

# ADMIN CONFIGURATION
ADMIN_EMAIL=admin@blocmerce.com
PLATFORM_FEE_RATE=250

# DEVELOPMENT SETTINGS (only for development)
MOCK_PAYMENTS=false
MOCK_BLOCKCHAIN=false
MOCK_EMAIL=false 