# =====================================
# BLOCMERCE PRODUCTION ENVIRONMENT
# =====================================
# Copy this file and rename to '.env' for production use
# Replace all placeholder values with your actual production credentials

# =====================================
# DATABASE CONFIGURATION
# =====================================
NODE_ENV=production
MONGODB_URI=mongodb://localhost:27017/blocmerce_production

# =====================================
# SERVER CONFIGURATION
# =====================================
PORT=5000
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_64_characters_required
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_super_secure_session_secret_key_here_minimum_64_characters

# =====================================
# EMAIL SERVICE CONFIGURATION
# =====================================
EMAIL_SERVICE_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password

# =====================================
# BLOCKCHAIN CONFIGURATION
# =====================================
BLOCKCHAIN_ENABLED=true
RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
CHAIN_ID=1
ESCROW_CONTRACT_ADDRESS=YOUR_DEPLOYED_ESCROW_CONTRACT_ADDRESS

# =====================================
# IPFS CONFIGURATION
# =====================================
IPFS_ENABLED=true
IPFS_HOST=127.0.0.1
IPFS_PORT=5001
IPFS_PROTOCOL=http
PINATA_API_KEY=YOUR_PINATA_API_KEY
PINATA_SECRET_KEY=YOUR_PINATA_SECRET_KEY

# =====================================
# PAYMENT GATEWAYS
# =====================================
STRIPE_ENABLED=true
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_YOUR_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# =====================================
# SECURITY CONFIGURATION
# =====================================
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================
# FILE UPLOAD CONFIGURATION
# =====================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/svg+xml

# =====================================
# BLOCKCHAIN WALLET CONFIGURATION
# =====================================
# WARNING: Never commit actual private keys to version control
ESCROW_PRIVATE_KEY=YOUR_ESCROW_WALLET_PRIVATE_KEY_HERE
PLATFORM_WALLET_PRIVATE_KEY=YOUR_PLATFORM_WALLET_PRIVATE_KEY_HERE

# =====================================
# REDIS CONFIGURATION (Optional)
# =====================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =====================================
# MONITORING & LOGGING
# =====================================
LOG_LEVEL=info
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true

# =====================================
# API KEYS & THIRD PARTY SERVICES
# =====================================
GOOGLE_ANALYTICS_ID=YOUR_GA_ID
SENTRY_DSN=YOUR_SENTRY_DSN

# =====================================
# PRODUCTION OPTIMIZATIONS
# =====================================
COMPRESSION_ENABLED=true
STATIC_FILE_CACHING=true
DATABASE_CONNECTION_POOL_SIZE=10 