# =======================
# BLOCMERCE BACKEND PRODUCTION CONFIGURATION
# =======================

# APPLICATION SETTINGS
NODE_ENV=production
PORT=5000
APP_URL=https://your-domain.com

# DATABASE CONFIGURATION
MONGODB_URI=mongodb://localhost:27017/blocmerce_production

# SECURITY CONFIGURATION (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_secure_jwt_secret_key_min_32_chars_production
JWT_REFRESH_SECRET=your_secure_refresh_secret_key_min_32_chars_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=your_secure_session_secret_production

# EMAIL SERVICE CONFIGURATION
EMAIL_SERVICE_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# BLOCKCHAIN CONFIGURATION
BLOCKCHAIN_ENABLED=true
ETHEREUM_NETWORK=mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
PRIVATE_KEY=YOUR_WALLET_PRIVATE_KEY_FOR_DEPLOYMENT
CONTRACT_ADDRESS=

# STRIPE PAYMENT CONFIGURATION
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_LIVE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET

# IPFS CONFIGURATION
IPFS_ENABLED=true
IPFS_HOST=127.0.0.1
IPFS_PORT=5001
IPFS_PROTOCOL=http

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# SECURITY HEADERS
HELMET_ENABLED=true
CORS_ORIGIN=https://your-frontend-domain.com

# FILE UPLOAD LIMITS
FILE_UPLOAD_LIMIT=10mb
MAX_FILES_PER_UPLOAD=5

# MONITORING & LOGGING
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=info

# ADMIN CONFIGURATION
ADMIN_EMAIL=admin@blocmerce.com
PLATFORM_FEE_RATE=250