# ===========================================
# üîó BLOCKCHAIN CONFIGURATION EXAMPLE
# ===========================================
# Copy this to .env and add these variables to your environment

# Enable blockchain functionality
BLOCKCHAIN_ENABLED=true

# ===========================================
# üåê NETWORK CONFIGURATIONS
# ===========================================

# Ethereum Sepolia Testnet
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Polygon Mumbai Testnet
MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY

# BSC Testnet
BSCSCAN_API_KEY=YOUR_BSCSCAN_API_KEY

# ===========================================
# üîê WALLET CONFIGURATION
# ===========================================

# Deployer private key (NEVER commit real keys to version control)
PRIVATE_KEY=YOUR_DEPLOYER_PRIVATE_KEY_HERE

# Contract owner addresses
ADMIN_WALLET_1=0x742d35Cc6634C0532925a3b8D7b9E9865c13a8C4
ADMIN_WALLET_2=0x8ba1f109551bD432803012645Hac136c45c2aB63

# ===========================================
# üìã DEPLOYED CONTRACT ADDRESSES
# ===========================================

# Sepolia Testnet Contracts
SEPOLIA_ESCROW_CONTRACT=
SEPOLIA_PRODUCT_REGISTRY=

# Mumbai Testnet Contracts
MUMBAI_ESCROW_CONTRACT=
MUMBAI_PRODUCT_REGISTRY=

# BSC Testnet Contracts
BSC_ESCROW_CONTRACT=
BSC_PRODUCT_REGISTRY=

# ===========================================
# ‚ö° GAS CONFIGURATION
# ===========================================

# Gas price settings (in gwei)
DEFAULT_GAS_PRICE=20
MAX_GAS_PRICE=100

# Gas limits
DEPLOY_GAS_LIMIT=5000000
TRANSACTION_GAS_LIMIT=500000

# ===========================================
# üîß DEVELOPMENT SETTINGS
# ===========================================

# Local blockchain
LOCAL_RPC_URL=http://127.0.0.1:8545
LOCAL_CHAIN_ID=1337

# Enable gas reporting
REPORT_GAS=true

# ===========================================
# üí∞ PLATFORM SETTINGS
# ===========================================

# Platform fee (in basis points - 250 = 2.5%)
PLATFORM_FEE_RATE=250

# Escrow timeout (in days)
DEFAULT_ESCROW_TIMEOUT=30

# ===========================================
# üì° INTEGRATION SETTINGS
# ===========================================

# Web3 provider settings
WEB3_PROVIDER_TIMEOUT=30000
MAX_RETRY_ATTEMPTS=3

# Transaction confirmation blocks
CONFIRMATION_BLOCKS=3

# ===========================================
# üõ°Ô∏è SECURITY SETTINGS
# ===========================================

# Multi-signature settings
MULTI_SIG_REQUIRED=false
MIN_SIGNATURES=2

# Emergency controls
EMERGENCY_STOP_ENABLED=true
PAUSE_ENABLED=true

# ===========================================
# üìä MONITORING
# ===========================================

# Blockchain monitoring
MONITOR_BLOCKS=true
MONITOR_TRANSACTIONS=true
MONITOR_CONTRACTS=true

# Alerts
ALERT_ON_FAILED_TX=true
ALERT_ON_HIGH_GAS=true
ALERT_WEBHOOK_URL= 